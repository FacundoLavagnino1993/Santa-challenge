{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "outDir": "../../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "types": ["node", "jest"],
    "paths": {
      "*": ["types/*"],
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@core/*": ["app/core/*"],
      "@store": ["app/store/index"],
      "@store/*": ["app/store/*"],
      "@env": ["environments/environment"],
      "@angular/*": ["../../node_modules/@angular/*"]
    }
  },
  "include": ["**/*.spec.ts", "**/*.d.ts"]
}
